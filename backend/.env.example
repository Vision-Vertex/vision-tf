# ===========================================
# Vision-TF Backend Environment Configuration
# ===========================================
# Copy this file to .env and update the values for your environment

# ===========================================
# Database Configuration
# ===========================================
DATABASE_URL=postgresql://your_db_user:your_db_password@your_db_host:5432/your_db_name

# Database connection details (for Docker setup)
DB_HOST=your_db_host
DB_PORT=5432
DB_NAME=your_database_name
DB_USER=your_database_user
DB_PASS=your_database_password

# ===========================================
# JWT Configuration
# ===========================================
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# ===========================================
# RabbitMQ Configuration
# ===========================================
RABBITMQ_URL=amqp://your_rabbitmq_user:your_rabbitmq_password@your_rabbitmq_host:5672
RABBITMQ_HOST=your_rabbitmq_host
RABBITMQ_PORT=5672
RABBITMQ_USER=your_rabbitmq_user
RABBITMQ_PASS=your_rabbitmq_password

# ===========================================
# Application Configuration
# ===========================================
NODE_ENV=development
PORT=3000
FRONTEND_URL=http://localhost:3001

# ===========================================
# Email Configuration (for email verification, password reset, etc.)
# ===========================================
# SMTP Configuration
SMTP_HOST=your_smtp_host
SMTP_PORT=587
SMTP_USER=your_email_address
SMTP_PASS=your_email_password
SMTP_FROM=your_from_email_address

# Email verification settings
EMAIL_VERIFICATION_EXPIRES=24h
PASSWORD_RESET_EXPIRES=1h

# ===========================================
# Security Configuration
# ===========================================
# Rate limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_LIMIT=100

# Session management
SESSION_SECRET=your_session_secret_key
MAX_SESSIONS_PER_USER=3
SESSION_EXPIRES=24h
REMEMBER_ME_EXPIRES=30d

# Account lockout
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=15m

# ===========================================
# Logging Configuration
# ===========================================
LOG_LEVEL=info
LOG_FORMAT=json

# ===========================================
# API Configuration
# ===========================================
API_PREFIX=v1
API_TITLE=Vision-TF Authentication API
API_DESCRIPTION=Complete authentication system with advanced security features
API_VERSION=1.0.0

# ===========================================
# Health Check Configuration
# ===========================================
HEALTH_CHECK_INTERVAL=30s
HEALTH_CHECK_TIMEOUT=10s

# ===========================================
# Development/Testing Configuration
# ===========================================
# Set to true to enable detailed logging
DEBUG=false

# Test database (for running tests)
TEST_DATABASE_URL=postgresql://test_user:test_password@localhost:5432/vision_tf_test

# ===========================================
# Production Overrides (uncomment for production)
# ===========================================
# NODE_ENV=production
# JWT_SECRET=your_actual_production_secret_key
# SMTP_HOST=your_production_smtp_host
# SMTP_USER=your_production_email
# SMTP_PASS=your_production_password
